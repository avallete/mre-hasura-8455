{
  "name": "apollo-server-boilerplate",
  "version": "0.0.1",
  "description": "A minimal boilerplate which uses apollo-server and express to setup a graphql backend",
  "scripts": {
    "dev": "eval $(cat .env) nodemon src/index.js --exec babel-node",
    "build": "babel src -d build",
    "start": "node build/index.js"
  },
  "author": "MsP",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.3.2",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "graphql": "^14.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "nodemon": "^1.18.9"
  }
}
